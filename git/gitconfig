[include]
	path = ~/.gitconfig.name
	path = ~/.gitconfig.aliases
[core]
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore_global
	autocrlf = false
	# Fix git branch in newer git by not making less page if there isn't a lot of output.
	# https://stackoverflow.com/a/55395928/1473320
	pager = less -FX
[web]
	browser = google-chrome
[rerere]
	enabled = 1
	autoupdate = 1
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[credential]
	helper = cache
[diff]
	tool = meld
[push]
	default = simple
[init]
	templatedir = ~/.git_template
[svn]
	rmdir = 1
[remote "origin"]
	prune = true
